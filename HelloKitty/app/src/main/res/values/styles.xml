<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#673AB7</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">212dp</item>
        <item name="android:background">#00572723</item>
        <item name="android:backgroundTint">#C1C5D5</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display2</item>
    </style>

    <style name="MyTextStyle.Big">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="MyThen" parent="Theme.Material3.Dark">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
    </style>
</resources>